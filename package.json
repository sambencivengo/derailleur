{
  "name": "derailleur",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "database": "cd docker && sh ./buildDerailleurDatabase.sh",
    "docker:db": "docker-compose -f docker/docker-compose.yml up -d && npm run migrate:docker:deploy",
    "docker:down": "docker-compose -f docker/docker-compose.yml down",
    "docker:container": "docker exec -it $cid psql -U user derailleur",
    "dev": "npm run prisma:seed & next dev",
    "dev-lint": "next lint && next dev",
    "build": "npx prisma generate && npx prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint",
    "test": "npx prisma migrate deploy && jest -i",
    "migrate:create": "npx prisma migrate dev --name",
    "migrate:docker:deploy": "npx prisma migrate deploy",
    "prisma:client generate": "npx prisma generate",
    "prisma:studio": "npx prisma studio",
    "prisma:seed": "npx prisma db seed"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.629.0",
    "@hookform/resolvers": "^3.3.2",
    "@lucia-auth/adapter-prisma": "^4.0.0",
    "@prisma/client": "^5.18.0",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.1",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.2.0",
    "@radix-ui/react-scroll-area": "^1.1.0",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-toast": "^1.2.1",
    "@radix-ui/react-toggle": "^1.0.3",
    "@radix-ui/react-toggle-group": "^1.0.4",
    "@types/react": "18.2.21",
    "@types/react-dom": "18.2.7",
    "@vercel/postgres": "^0.9.0",
    "argon2": "^0.31.1",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "cmdk": "^0.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "eslint": "8.48.0",
    "eslint-config-next": "^13.5.4",
    "express": "^4.18.2",
    "lucia": "^3.0.0",
    "lucide-react": "^0.284.0",
    "moment": "^2.29.4",
    "next": "^14.0.0",
    "next-themes": "^0.2.1",
    "oslo": "^0.27.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.48.2",
    "react-photoswipe-gallery": "^3.0.2",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.11.5",
    "@types/uuid": "^9.0.4",
    "assert": "^2.1.0",
